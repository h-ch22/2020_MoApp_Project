<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#171739">

    <TextView
        android:id = "@+id/RoomName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Room Name"
        android:layout_marginTop = "15dp"
        android:textColor = "#69d76b"
        android:gravity = "center"
        android:fontFamily="@font/nanumsquarebold"
        android:textSize = "40sp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "60dp">

        <ImageView
            android:id = "@+id/profile_user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "40dp"
            android:src = "@drawable/ic_user"/>

        <ImageView
            android:id = "@+id/profile_user2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "60dp"
            android:src = "@drawable/ic_user"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "20dp">

        <TextView
            android:id = "@+id/nickname_user1"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "입장 대기 중..."
            android:textColor = "#ffffff"
            android:fontFamily = "@font/nanumsquarebold"
            android:textSize = "25sp"
            android:layout_marginLeft = "40dp"/>

        <TextView
            android:id = "@+id/nickname_user2"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "입장 대기 중..."
            android:textColor = "#ffffff"
            android:fontFamily = "@font/nanumsquarebold"
            android:textSize = "25sp"
            android:layout_marginLeft = "40dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/multi_startGame"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop = "200dp"
        android:background="@drawable/btn_roundedgradient"
        android:drawableRight="@drawable/ic_arrow_right"
        android:fontFamily="@font/nanumsquarebold"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:text="게임 시작하기"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />

</LinearLayout>