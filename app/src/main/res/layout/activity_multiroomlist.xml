<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#171739">

    <LinearLayout
        android:orientation = "horizontal"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "10dp">

        <ImageButton
            android:id = "@+id/Btn_Back"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_marginTop = "15dp"
            android:layout_marginLeft = "10dp"
            android:src = "@drawable/ic_back"
            android:background = "#171739"/>

        <TextView
            android:id = "@+id/title_Level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "멀티플레이"
            android:layout_marginTop = "15dp"
            android:textColor = "#69d76b"
            android:layout_marginLeft = "80dp"
            android:fontFamily="@font/nanumsquarebold"
            android:textSize = "40sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:orientation ="vertical">

        <Button
            android:id = "@+id/multiRoom1"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop = "30dp"
            android:layout_marginLeft = "20dp"
            android:background = "@drawable/btn_rounded2"
            android:textColor = "#ffffff"
            android:fontFamily = "@font/nanumsquarebold"
            android:textSize = "30sp"
            android:text = "" />

        <Button
            android:id = "@+id/multiRoom2"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop = "30dp"
            android:layout_marginLeft = "20dp"
            android:background = "@drawable/btn_rounded2"
            android:textColor = "#ffffff"
            android:fontFamily = "@font/nanumsquarebold"
            android:textSize = "30sp"
            android:text = "" />

        <Button
            android:id = "@+id/multiRoom3"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop = "30dp"
            android:layout_marginLeft = "20dp"
            android:background = "@drawable/btn_rounded2"
            android:textColor = "#ffffff"
            android:fontFamily = "@font/nanumsquarebold"
            android:textSize = "30sp"
            android:text = "" />

        <Button
            android:id = "@+id/multiRoom4"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop = "30dp"
            android:layout_marginLeft = "20dp"
            android:background = "@drawable/btn_rounded2"
            android:textColor = "#ffffff"
            android:fontFamily = "@font/nanumsquarebold"
            android:textSize = "30sp"
            android:text = "" />

    </LinearLayout>

    <Button
        android:id="@+id/createRoombtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_roundedgradient"
        android:drawableLeft="@drawable/ic_add"
        android:layout_marginTop="70dp"
        android:layout_gravity = "center"
        android:paddingLeft="40dp"
        android:paddingRight = "50dp"
        android:onClick="playagain"
        android:text="방 만들기"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

</LinearLayout>