<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background = "#171739"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation = "horizontal"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "0dp">

        <ImageButton
            android:id = "@+id/Btn_Back"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "45dp"
            android:layout_marginLeft = "10dp"
            android:src = "@drawable/ic_back"
            android:background = "#171739"/>

        <TextView
            android:id = "@+id/Title_gamesel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "게임 종류 선택"
            android:textSize = "30sp"
            android:textColor = "#69d76b"
            android:fontFamily = "@font/nanumsquarebold"
            android:textStyle = "bold"
            android:layout_marginTop = "45dp"
            android:layout_marginLeft = "70dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "90dp"
        android:orientation = "vertical">

        <Button
            android:id = "@+id/Btn_Multi"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawableLeft = "@drawable/ic_multiplay"
            android:background = "@drawable/btn_roundedgradient"
            android:padding = "25dp"
            android:text = "멀티플레이"
            android:textColor = "#FFFFFF"
            android:fontFamily = "@font/nanumsquarebold"
            android:textSize = "20dp"
            android:layout_marginLeft = "30dp"/>

        <Button
            android:id = "@+id/Btn_Single"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawableLeft = "@drawable/ic_singleplay"
            android:background = "@drawable/btn_roundedgradient2"
            android:padding = "25dp"
            android:text = "싱글플레이"
            android:textColor = "#FFFFFF"
            android:textSize = "20dp"
            android:fontFamily = "@font/nanumsquarebold"
            android:layout_marginTop = "40dp"
            android:layout_marginLeft = "30dp"/>

    </LinearLayout>


</LinearLayout>