<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171739"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/mypage_backbtu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="#171739"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/title_mypage"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquarebold"
            android:gravity="center_horizontal"
            android:text="마이페이지"
            android:textColor="#69d76b"
            android:textSize="40dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mypage_profile1"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <EditText
            android:id="@+id/mypage_namevaule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:hint="닉네임을 입력하세요"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#9FFFFFFF"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_rounded_blue"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/mypage_setprofile"
                android:layout_width="47dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="사진선택"
                android:textColor="#ffffff"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_rounded_red"
            android:orientation="vertical">

            <Button
                android:id="@+id/mypage_upload"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:drawable/ic_menu_save"
                android:fontFamily="@font/nanumsquarebold"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="저장하기"
                android:textColor="#ffffff"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mypage_Emailtxt"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="이메일"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/mypage_Emailvaule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="이메일을 입력하세요"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#9FFFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mypage_numbertxt"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="전화번호"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/mypage_numbervaule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="전화번호를 입력하세요"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#9FFFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/mypage_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="성별"
        android:textColor="#ffffff" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/mypage_male"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/btn_rounded_blue"
            android:clickable="true"
            android:onClick="onClick"
            android:padding="25dp"
            android:src="@drawable/ic_male" />

        <ImageButton
            android:id="@+id/mypage_female"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/btn_rounded_red"
            android:clickable="true"
            android:onClick="onClick"
            android:padding="25dp"
            android:src="@drawable/ic_female" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mapage_maleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft = "115dp"
            android:fontFamily="@font/nanumsquareregular"
            android:text="남성"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/mypage_femaleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumsquareregular"
            android:text="여성"
            android:textColor="#ffffff" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/mypage_lastscoretxt"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="최근점수"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <TextView
            android:id="@+id/mypage_lastscorevalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="기록이 없습니다"
            android:textColor="#ffffff"
            android:textColorHint="#9FFFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/mypage_highscoretxt"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="최고점수"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <TextView
            android:id="@+id/mypage_highscorevaule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="기록이 없습니다"
            android:textColor="#ffffff"
            android:textColorHint="#9FFFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mypage_logoutbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight=".5"
            android:background="#00ff0000"
            android:fontFamily="@font/nanumsquareregular"
            android:text="로그아웃"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/mypage_savebtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight = "5dp"
            android:background="@drawable/btn_roundedgradient"
            android:drawableRight="@drawable/ic_arrow_right"
            android:fontFamily="@font/nanumsquarebold"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:text="저장하기"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>